{
    "docdash": {
        "search": true
    },
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "controllers", 
            "database/models", 
            "globalDocs",
            "lib",
            "routes",
            "services"
        ],
        "includePattern": "\\.js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "template": "node_modules/docdash/",
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "verbose": true,
        "readme": "README.md"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "useShortNamesInLinks": true
    }
}
