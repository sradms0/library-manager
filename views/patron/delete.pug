extends ../layout.pug

block content
  -const name = `${dataValues.first_name} ${dataValues.last_name}`
  h2=name
  p 
    | Are you sure you want to delete 
    em#patron-name=name
    | ?
  form(action=`/patrons/${dataValues.id}/delete`, method="post")
    a.button(href=`/patrons/${dataValues.id}/update`) No! Take me back! 
    | 
    input(type="submit", value = "Yes, I'm sure")
