extends ../layout

block content
  h1 Update Book

  if (errors)
    each error in errors
      p.error= error

  form(method='post' action=`/books/${dataValues.id}/update`)
    p
      label(for='title') Title
      input.book-detail(name='title' type='text' id='title' value=`${dataValues.title}`)
    p
      label(for='author') Author
      input.book-detail(name='author' type='text' id='author' value=`${dataValues.author}`)
    p
      label(for='genre') Genre
      input.book-detail(name='genre' type='text' id='genre' value=`${dataValues.genre}`)
    p
      label(for='year') Year
      input.book-detail(name='year' type='text' id='year' value=`${dataValues.year}`)

    p: input(type='submit' value='Update Book')

    p: a#delete(class='button' href=`/books/${dataValues.id}/delete`) Delete

    p: a#cancel(class='button' href='/books') Cancel
