mixin createForm(action, dataValues)

  form(method='post' action=action)
    p
      label(for="book_id") Book
      select(id="book_id" name="book_id")
        each book in dataValues.books
          option(value=`${book.id}`)= book.title
    p
      label(for="patron_id") Patron
      select(id="patron_id" name="patron_id", value=`${dataValues.Patron.id}`)
        each patron in dataValues.patrons
          option(value=`${patron.id}`)=patron.name
    p
      label(for="loaned_on") Loaned on:
      input(id="loaned_on" name="loaned_on" type="text" value=`${new Date(dataValues.loaned_on)}`)
    p
      label(for="return_by") Return by:
      input(id="return_by" name="return_by" type="text" value=`${new Date(dataValues.return_by)}`)
    block

  script.
    document.querySelector('select#book_id').value = #{ dataValues.Book.id };
    document.querySelector('select#patron_id').value = #{ dataValues.Patron.id };
